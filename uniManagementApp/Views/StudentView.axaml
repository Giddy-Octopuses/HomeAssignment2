<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:uniManagementApp.ViewModels"
             xmlns:converters="using:uniManagementApp.Converters"
             xmlns:av="clr-namespace:Avalonia;assembly=Avalonia.Base"
             x:Class="uniManagementApp.Views.StudentView"
             x:DataType="vm:StudentViewModel">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Left">
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Enrolled Subjects Tab -->
            <TabItem Header="Enrolled Subjects">
                <StackPanel HorizontalAlignment="Left">
                    <ListBox ItemsSource="{Binding EnrolledSubjects}"
                             SelectedItem="{Binding SelectedSubject}"
                             SelectionMode="Single,Toggle"
                             Width="200"
                             HorizontalAlignment="Left">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Color}" CornerRadius="1" Margin="0.5" Padding="1" Width="180">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="{Binding SubjectDetails}" HorizontalAlignment="Left"/>
                    <Button Content="Drop"
                            Command="{Binding DropSubjectCommand}" HorizontalAlignment="Left"/>
                    <Popup Name="PopupDrop" IsLightDismissEnabled="True" IsOpen="{Binding PopupDropOpen}">    
                        <Border BorderThickness="0.75" BorderBrush="Black" Padding="6,3" Background="White">
                            <TextBlock Text="{Binding MessageDrop}" Foreground="{Binding ColourDrop}"/>
                        </Border>
                    </Popup>        
                </StackPanel>
            </TabItem>

            <!-- Available Subjects Tab -->
            <TabItem Header="Available Subjects">
                <StackPanel HorizontalAlignment="Left">
                    <ListBox ItemsSource="{Binding AvailableSubjects}"
                             SelectedItem="{Binding SelectedSubject}"
                             SelectionMode="Single,Toggle"
                             Width="200"
                             HorizontalAlignment="Left">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Color}" CornerRadius="1" Margin="0.5" Padding="1" Width="180">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="{Binding SubjectDetails}" HorizontalAlignment="Left"/>
                    <Button Content="Enroll"
                            Command="{Binding EnrollSubjectCommand}" HorizontalAlignment="Left"/>
                    <Popup Name="PopupEnroll" IsLightDismissEnabled="True" IsOpen="{Binding PopupEnrollOpen}">    
                        <Border BorderThickness="0.75" BorderBrush="Black" Padding="6,3" Background="White">
                            <TextBlock Text="{Binding MessageEnroll}" Foreground="{Binding ColourEnroll}"/>
                        </Border>
                    </Popup>        
                </StackPanel>
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>
