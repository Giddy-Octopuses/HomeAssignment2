<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:uniManagementApp.ViewModels"
             x:Class="uniManagementApp.Views.StudentView"
             x:DataType="vm:StudentViewModel">
    
    <TabControl>
        <!-- Enrolled Subjects Tab -->
        <TabItem Header="Enrolled Subjects">
            <StackPanel>
                <ListBox ItemsSource="{Binding EnrolledSubjects}" SelectedItem="{Binding SelectedSubject}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Text="{Binding SubjectDetails}"/>
                <Button Content="Drop" Command="{Binding DropSubjectCommand}" IsEnabled="{Binding SelectedSubject}"/>
            </StackPanel>
        </TabItem>
        
        <!-- Available Subjects Tab -->
        <TabItem Header="Available Subjects">
            <StackPanel>
                <ListBox ItemsSource="{Binding AvailableSubjects}" SelectedItem="{Binding SelectedSubject}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Text="{Binding SubjectDetails}"/>
                <Button Content="Enroll" Command="{Binding EnrollSubjectCommand}" IsEnabled="{Binding SelectedSubject}"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>