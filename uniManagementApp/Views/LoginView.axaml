
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:uniManagementApp.ViewModels"
             x:Class="uniManagementApp.Views.LoginView"
             x:DataType="vm:LoginViewModel">

            <UserControl.DataContext>
                <vm:LoginViewModel />
            </UserControl.DataContext>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <RadioButton Content="Student" GroupName="UserRole" IsChecked="{Binding IsStudent}" />
                    <RadioButton Content="Teacher" GroupName="UserRole" IsChecked="{Binding IsTeacher}" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBox x:Name="UsernameTextBox" 
                        Watermark="username" Width="200" Text="{Binding Username}"/>
                        
                <TextBox x:Name="PasswordTextBox" 
                        Width="200" 
                        Watermark="password" PasswordChar="*" Margin="0,5,0,0" Text="{Binding Password}"/>
                        
                <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Margin="0,5,0,0"/>
                
                <Button x:Name="LoginButton" HorizontalAlignment="Center" Content="Login" Width="200" Margin="0,10,0,0" Click="LoginButton_Click"/>
            </StackPanel>

</UserControl>